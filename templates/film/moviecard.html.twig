{% extends 'base.html.twig' %}
{% block title %}Title{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; text-align: center;}
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .flex {display:flex; flex-wrap: wrap; margin:2em 0; justify-content: space-evenly;}
</style>
<div class="example-wrapper">
    <h1>{{ movie.name }}</h1>
    <img src={{movie.image}}> </img>
    <p>{{ movie.plot }}</p>
    <div>
    <div class="flex"><h1>{{ movie.score }} / 10</h1>
    <h1>{{ movie.votersNumber }}</h1></div>
    <div class="flex">
    {{form_start(form)}}
    {{form_start(formModify)}}
    {{form_widget(form.score)}}
    {{form_widget(form.vote)}}
    {{form_widget(formModify.password)}}
    {{form_widget(formModify.delete)}}
    
    
    {{form_end(formModify)}}
    {{form_end(form)}}
    </div> 
    </div>

</div>
{% endblock %}
